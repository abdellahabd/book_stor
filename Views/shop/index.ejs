<%- include('../includes/header.ejs') %> 
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
      <% if(products.length >0) { %>
      <h1>My Products</h1>
      <div class="grid">
        <% for(let pro of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= pro.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="/<%= pro.imageurl %> "
              alt="<%= pro.title %> "
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= pro.price %> </h2>
            <p class="product__description">
              <%= pro.description %> 
            </p>
          </div>
          <div class="card__actions">
            <%- include('../includes/add-to-cart.ejs',{pro :pro}) %>  
          </div>
        </article>
        <% } %>
      </div>
      <section class="pagination">
        <a href="/?page=1">1</a>
        <a href="/?page=2">2</a>
      </section>
    </main>
    <% } else {%>
    <h1>there are no Products</h1>
    <% } %>
    <a href="/admin/Download" >Download github sheet</a>
  </body>
</html>
