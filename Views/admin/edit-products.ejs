<%- include('../includes/header.ejs') %> 
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %> 

    <main>
      <% if (errue.length >0) { %>
        <div class="opacity-50 p-5 max-w-sm mx-auto bg-red-400  border-2 border-red-700 rounded-xl shadow-lg   space-x-4"style="display: flex; justify-content: center;">
            <div class="text-lg font-medium text-black" style="color: crimson;"> <%=errue  %></div>
        </div>
        <% } %>
      <form class="product-form" action="/admin/<% if (editmod) { %>edit_products
      <% } else { %>add_product<% } %>" method="POST" enctype="multipart/form-data">
        <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value=" <% if (editmod) { %><%=prod.title%> <% } %>" />

        </div>
        <!-- <div class="form-control">         
          <label for="imageurl">image URL</label>
          <input type="text" name="imageurl" id="imageurl"   value=" "/>
        </div> -->
        <div class="form-control">         
          <label for="image">image</label>
          <input type="file" name="image" id="image"/>
        </div>
        <div class="form-control">         
          <label for="price">Price</label>
          <input type="number" name="Price" id="Price" step="0.01"  value= <% if (editmod) { %><%=prod.price%> <% } %>/>
        </div>
        
        <div class="form-control">    
          <label for="desciptions">desciptions</label>
          <textarea  name="desciptions" id="desciptions" rows='5'> <% if (editmod) { %><%=prod.description%> <% } %></textarea>
        </div>
        <% if (editmod) { %>
         <input type="hidden" name="id" value="<%= prod.id %> "/>
        <% } %>
        <button class="btn" type="submit"><% if (editmod) { %>Update Product
          <% } else { %>ADD product<% } %></button>
      </form>
    </main>
    <%- include('../includes/end.ejs') %> 