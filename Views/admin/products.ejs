<%- include('../includes/header.ejs') %> 
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
      <% if(products.length >0) { %>
      <h1>My Products</h1>
      <div class="grid">
        <% for(let pro of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= pro.title %></h1>
          </header>
          <div class="card__image">
            <img
              src="/<%= pro.imageurl %>"
              alt="<%= pro.title %> "
            />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= pro.price %> </h2>
            <p class="product__description">
              <%= pro.description %> 
            </p>
          </div>
          <div class="card__actions">
           <button class="btn"> <a href="/admin/edit_products/<%= pro.id %>?edit=true ">edit</a></button> 
            <button class="btn"><a href="/admin/delete_products/<%= pro.id %>">Delete</a></button>
          </div>
        </article>
        <% } %>
      </div>
    </main>
    <% } else {%>
    <h1>there are no Products</h1>
    <% } %>
  </body>
</html>
