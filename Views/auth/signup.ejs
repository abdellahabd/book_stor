<%- include('../includes/header.ejs') %> 
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errue.length >0) { %>
            <div class="opacity-50 p-5 max-w-sm mx-auto bg-red-400  border-2 border-red-700 rounded-xl shadow-lg   space-x-4"style="display: flex; justify-content: center;">
                <div class="text-lg font-medium text-black" style="color: crimson;"> <%=errue  %></div>
            </div>
            <% } %>
        <form class="login-form" action="/signup" method="post" >
            <div class="form-control">
                <label for="name">name</label>
                <input type="text" name="name" id="name">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label> 
                <input type="email" name="email" id="email" value="<%= oldData.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input  type="password" name="password" id="password" value="<%= oldData.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input  type="password" name="confirmPassword" id="confirmPassword" value="<%= oldData.passwordConfirm %>">
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>